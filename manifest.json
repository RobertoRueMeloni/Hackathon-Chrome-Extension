{
    "manifest_version": 2,
    "name": "Hackathon",
    "version": "1.0",
    "description": "Remove video distractions.",
    "content_scripts": [
        {
          /** matches will update all webpages **/
          "matches": ["<all_urls>"],
          "js": ["main.js"]
        }
      ],
    "browser_action": {
        "default_popup" :  "SleepPopup.html",
        "default_title": "Sleep"
      }
  }